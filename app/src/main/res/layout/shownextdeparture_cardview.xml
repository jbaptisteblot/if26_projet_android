<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showNextDeparture_cardview"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/showNextDeparture_cardview_heuredepart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="91dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showNextDeparture_cardview_heurearrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showNextDeparture_cardview_heuredepart"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/showNextDeparture_cardview_heuredepart"
                android:text=""
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:contentDescription="@string/addDestination_saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/showNextDeparture_cardview_heurearrive"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="24dp"
                android:scaleType="matrix"
                app:srcCompat="@drawable/ic_schedule_black_24dp" />

            <TextView
                android:id="@+id/showNextDeparture_cardview_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/showNextDeparture_cardview_correspondance"
                android:layout_alignParentEnd="true"
                android:text="" />

            <TextView
                android:id="@+id/showNextDeparture_cardview_correspondance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/showNextDeparture_cardview_heurearrive"
                android:layout_toStartOf="@+id/imageView2"
                android:text=""
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:layout_alignBottom="@+id/showNextDeparture_cardview_correspondance"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/showNextDeparture_cardview_correspondance"
                app:srcCompat="@drawable/ic_train_black_24dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>